<%- include("./partials/header") %>
	<div class="ui text container segment" id="mainindexpage">
        <div class="ui huge header">Authors</div>
		<div class="ui divided items">
            <ul>
                <% let unique = []
                let arr = []
                books.forEach(function(book){
                    arr.push(book.author)
                });
                arr.forEach(e=>{
                    if(!unique.includes(e)){
                        unique.push(e)
                    }
                })
                %>
                <% unique.forEach(function(book){%>
                    <div class="item">
                        <li><a href="/books/author/<%- book %>">
                            <div class="author"style="font-size:22px;">
                                <%- book %>
                            </div>
                        </a>
                        </li>
                    </div>
                <%});%>
            </ul>
		</div>
	</div>
	<%- include("./partials/footer") %>