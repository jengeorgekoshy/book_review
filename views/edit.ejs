<%- include("./partials/header.ejs") %>

	<div class="ui newbook text container segment">

		<div class="ui huge header">Edit Book Review for : <%= book.title %></div>

		<form action="/books/<%=book._id%>?_method=PUT" method="POST" class="ui form">

			<div class="field">
				<label>Book Title</label>
				<input type="text" name="book[title]" placeholder="Book Title" required value = "<%= book.title%>">
			</div>

			<div class="field">
				<label>URL of Book Cover Image</label>
				<input type="text" name="book[image]" placeholder="URL of Book Cover image" required value = "<%= book.image%>">
			</div>

			<div class="field">
				<label>Author</label>
				<input type="text" name="book[author]" placeholder="Author of the book" required value = "<%= book.author%>">
			</div>

			<div class="field">
				<label>Language</label>
				<input type="text" name="book[language]" placeholder="Language of the book" required value = "<%= book.language%>">
			</div>

			<div class="field">
				<label>Genre</label>
				<input type="text" name="book[genre]" placeholder="Genre of the book" required value = "<%= book.genre%>">
			</div>

			<div class="field">
				<label>Book Summary</label>
				<textarea name="book[description]" required><%= book.description %></textarea>
			</div>

			<div class="field">
				<label>Book Review</label>
				<textarea name="book[review]" ><%= book.review %></textarea>
			</div>

			<div class=" grouped fields">

				<label for="book[rating]">Rating</label>

				<div class="field">
			      <div class="ui radio checkbox">
			        <input type="radio" name="book[rating]" tabindex="0" class="hidden" value="1">
			        <label><i class="yellow star icon"></i></label>
			      </div>
			    </div>

			    <div class="field">
			      <div class="ui radio checkbox">
			        <input type="radio" name="book[rating]" tabindex="0" class="hidden" value="2">
			        <label><i class="yellow star icon"> </i><i class="yellow star icon"></i></label>
			      </div>
			    </div>

			    <div class="field">
			      <div class="ui radio checkbox">
			        <input type="radio" name="book[rating]" tabindex="0" class="hidden" value="3">
			        <label><i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i></label>
			      </div>
			    </div>

			    <div class="field">
			      <div class="ui radio checkbox">
			        <input type="radio" name="book[rating]" tabindex="0" class="hidden" value="4">
			        <label><i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i></label>
			      </div>
			    </div>

			    <div class="field">
			      <div class="ui radio checkbox">
			        <input type="radio" name="book[rating]" tabindex="0" class="hidden" value="5">
			        <label><i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i> <i class="yellow star icon"></i></label>
			      </div>
			    </div>

			</div>

			<button class="ui basic yellow button" type="submit">Submit</button>

		</form>

	</div>
	

<%- include("./partials/footer.ejs") %>