<%- include("./partials/header") %>
	<div class="ui text container segment" id="mainindexpage"style="margin-bottom:150px">
        <div class="ui huge header">Languages</div>
		<div class="ui divided items">
            <ul>
                <% let unique = []
                let arr = []
                books.forEach(function(book){
                    arr.push(book.language)
                });
                arr.forEach(e=>{
                    if(!unique.includes(e)){
                        unique.push(e)
                    }
                })
                %>
                <% unique.forEach(function(book){%>
                    <div class="item">
                        <li><a href="/books/language/<%- book %>">
                            <div class="language"style="font-size:22px;">
                                <%- book %>
                            </div>
                        </a>
                        </li>
                    </div>
                <%});%>
            </ul>
		</div>
	</div>
	<%- include("./partials/footer") %>